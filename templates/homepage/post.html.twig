{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}
    <div class="container">
        {{ dump(post) }}
        <h2>{{ post.title }}</h2>
        <p>Par : {{ post.author.userIdentifier }}</p>
        <div>
            {{ post.content|raw }}
        </div>
        <hr>
        <h2>Commentaire</h2>
        <div class="row g-3">
            {% for comment in post.comments %}
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            {{ comment.content|raw }}
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">
                                Par : {{ comment.author.userIdentifier }}
                            </small>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
