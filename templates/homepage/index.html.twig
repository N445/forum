{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}
<div class="container">
    <div class="row g-3">
        {% for post in posts %}
            <div class="col-md-3">
                <div class="card h-100">
                    <div class="card-body">
                        {{ post.title }}
                        <hr>
                        <a href="{{ path('app_post',{'id':post.id}) }}">
                            Lire
                        </a>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">
                            {{ post.createdAt|date('d/m/Y H:i:s') }}
                        </small>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
